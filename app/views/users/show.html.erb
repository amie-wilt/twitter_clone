<% if current_user.following?(@user) %>
    <%= link_to "Unfollow", unfollow_user_path(@user) %>
<% else %>
    <%= link_to "Follow", follow_user_path(@user) %>
<% end %>

<div class="user-profile-header">
  <h1><%= @user.name %></h1>
  <p><%= (@user.email) %></p>
  <%= image_tag(current_user.avatar.url, :size => '150x150') %>
</div>


<div>
  <% @user.moos.each do |moo| %>
      <p class="moo-tweet"><%= moo.description %></p>
  <% end %>
</div>






<!DOCTYPE html>
<html>
<head>
  <title>MooMill | Twitter Clone</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="login-container">
  <div class="login-inner-container">
    <% unless current_user %>
        <%= link_to "Sign In", new_user_session_path %>
        <%= link_to 'Sign up', new_user_registration_path %>
    <% else %>
        <form action="<%= destroy_user_session_path %>" method="POST">
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
          <input name="_method" type="hidden" value="delete"/>
          <button type="submit" class="btn btn-default">Log Out as <%= current_user.name %></button>
        </form>
        <%= link_to image_tag(current_user.avatar.url, :size => '32x32', :class => 'img-thumbnail navbar-right avatar'), edit_registration_path(:user) %>
    <% end %>
    <div>
      <%= alert %>
    </div>
  </div>
</div>

<%= yield %>

</body>
</html>
